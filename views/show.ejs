<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blogs.title%></div>
    <div class="ui attached segment">
        <div class="item">
            <img class="ui centered rounded image"src="<%=blogs.image%>">
            <div class="content">
                <span><%=blogs.created.toDateString()%></span>
            </div>
            <div class="description">
            <p><%=blogs.body%></p>
        </div>
        <a class="orange basic UI button"  href="/blogs/<%=blogs._id%>/edit>">EDIT</a>
        <form action="/blogs/<%=blogs._id%>?_method=DELETE" method="POST">
            <button class="ui red basic button">DELETE</button>
        </form>
        </div>
    </div>    

</div>
<% include partials/footer %>